<h1>Choose an Image!</h1>
<% if current_admin? %>
  <%= link_to 'create a new image' %>
<% end %>
<% @images.each do |image| %>
<div id="image-<%= image.id %>">
  <%= image.title %>
  <%= image_tag image.url %>

  <%= form_tag user_idea_path(current_user, @idea), method: 'patch' do %>
  <%= hidden_field_tag :image_id, image.id %>\
  <%= submit_tag "Add Image" %>
  <% end %>

</div>
<% end %>
